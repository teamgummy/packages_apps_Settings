<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/general_settings"     
    android:key="general_settings">

    <PreferenceCategory
        android:key="generals_settings"
        android:title="@string/general_settings">

	<CheckBoxPreference android:key="turn_degree"
		android:title="@string/turn_degree">
	</CheckBoxPreference>

	<CheckBoxPreference android:key="kill_app"
		android:title="@string/kill_app">
	</CheckBoxPreference>

	<CheckBoxPreference android:key="enable_volume_options"
		android:title="@string/enable_volume_options">
	</CheckBoxPreference>

	<CheckBoxPreference android:key="unlink_volumes"
		android:title="@string/unlink_volumes_title"
		android:summary="@string/unlink_volumes_summary">
	</CheckBoxPreference>

	<CheckBoxPreference android:key="brightness_slider"
		android:title="@string/brightness_slider"
                android:summary="@string/brightness_slider_sum">
	</CheckBoxPreference>

        <PreferenceScreen
                android:key="scroll_setup"
                android:title="@string/scroll_title"
                android:summary="@string/scroll_summary"
                android:fragment="com.android.settings.Scroller" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="boot_animation_settings"
        android:title="Boot Animation Settings">

	<CheckBoxPreference android:key="boot_anim"
		android:title="@string/boot_anim_title"
		android:summary="@string/boot_anim_summary">
	</CheckBoxPreference>

	<CheckBoxPreference android:key="boot_sound"
		android:title="@string/boot_sound_title"
                android:summary="@string/boot_sound_summary">
	</CheckBoxPreference>

    </PreferenceCategory>
</PreferenceScreen>
